# Copy this file to terraform.tfvars and fill in your values

project_id = "your-gcp-project-id"
project_name = "microservices"
region = "asia-northeast3"

# Database password (use strong password in production)
db_password = "your-secure-db-password"

# Availability zones
availability_zones = ["asia-northeast3-a", "asia-northeast3-b"]

# Subnet CIDRs
subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]

# Pods and services CIDR ranges
pods_cidr_ranges = ["10.1.0.0/16", "10.2.0.0/16"]
services_cidr_ranges = ["10.3.0.0/16", "10.4.0.0/16"]

# GKE settings
enable_autopilot = true

# Cloud SQL settings
db_tier = "db-f1-micro"
db_disk_size = 20
db_disk_type = "PD_SSD"
db_username = "admin"

# Redis settings
redis_memory_size = 1
